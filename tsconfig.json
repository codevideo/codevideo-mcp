{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}